{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["dom", "esnext", "esnext.asynciterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": false,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "types": ["@nuxt/vue-app", "@types/node"]
  }
}
